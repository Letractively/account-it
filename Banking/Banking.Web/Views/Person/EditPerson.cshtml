@model Banking.Domain.Person

<div data-id=@Model.ID>  
    <form>      
        <div>@Html.EditorFor(op => op.Name)</div>
        <div>@Math.Round(Model.GetBalance(), 2)</div>
        <div>
            <input type="button" value="Save" class="saveButton"/>
            <input type="button" value="Cancel" class="cancelButton"/>
        </div>
    </form>
</div> 