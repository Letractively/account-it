@{
    ViewBag.Title = "EnterCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    jQuery('#enter').live('click', function () {
        var query = { code: jQuery('#code').prop('value') };
        jQuery.post('/Home/EnterCode', query, function (data) {
            if (data.Success == true) {
                window.location = '/operations';
            } else {
                alert('invalid code');
            }
        }).error(function () { alert('fck'); })
    })
</script>

<h2>For access enter code</h2>

<div class="enter_code">
    <div id="enter_code_inner">
        <ul>
            <li><input id="code" type="password" /> </li>
            <li><input id="enter" type="button" value="Enter" /></li>
        </ul>
    </div>
</div>