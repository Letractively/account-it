@model Banking.Domain.Operation
@using Banking.Web
    
<tr data-entity="operation" data-view="view" data-id=@Model.ID>
    <td>
        <input type="checkbox" class="itemCheck" data-action="select"/>
    </td>
    <td><div data-action='edit' data-sort-key="mark">@Model.Mark</div></td>
    <td><div data-action='edit' data-sort-key="amount">@Model.Amount.ToString(Helper.DecimalFormat)</div></td>
    <td><div data-action='edit' data-sort-key="description">@Model.Description</div></td>
    <td><div data-action='edit' data-sort-key="date" data-sort-value=@Model.Date.Ticks>@Model.Date.ToString(Helper.DateFormat)</div></td>
    <td>
        <div class="operationPersons" data-sort-key="participants" data-sort-value=@Model.Participants.Count>
            <ul>
                @foreach (var man in Model.Participants)
                {
                    <li>
                        <a href="/@man.Name">@man.Name</a>
                        @if (Model.Participants.Last() != man) { Write(","); }
                    </li>
                }
            </ul>
        </div>
    </td>
</tr>      
    



