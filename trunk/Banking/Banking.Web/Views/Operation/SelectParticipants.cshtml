@model Dictionary<Banking.Domain.Person, bool>

@if (Model.Count > 0)
{
<ul>
    @foreach (var pair in Model)
    {
        <li>
            <label>
                @if (pair.Value)
                {
                    <input data-id=@pair.Key.ID type="checkbox" checked />
                }
                else
                {
                   <input data-id=@pair.Key.ID type="checkbox" />
                }
                @pair.Key.Name
            </label> 
        </li>
    }
</ul>
}
else
{
    <h4>There are no persons; create somebody first.</h4>
}