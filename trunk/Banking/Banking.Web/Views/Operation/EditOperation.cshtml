@model Banking.Domain.Operation
           
@{
    string participants = Model.ListParticipants();           
}

<div data-id=@Model.ID>    
    <form>
    <div>Date</div>
    <div>@Html.EditorFor(op => op.Date)</div>
    <div>Amount</div>
    <div>@Html.EditorFor(op => op.Amount)</div>
    <div>Mark</div>
    <div>@Html.EditorFor(op => op.Mark)</div>  
    <div>Description</div>
    <div>@Html.EditorFor(op => op.Description)</div>
    <div>Participiants</div>
    <div class="editOperationPersons">@Html.Action("SelectParticipants", new { operation = Model })</div>
    <div class="editOperationButtons">
        <input type="submit" value="Save" class="saveButton"/>
        <input type="button" value="Cancel" class="cancelButton"/>
    </div>
    </form>
</div> 