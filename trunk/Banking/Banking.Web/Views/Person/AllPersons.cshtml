@model IEnumerable<Banking.Domain.Person>

@{
    ViewBag.Title = "AllPersons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="tableView tablesorter" id="persons">

  <caption>
    <p>Persons</p>
    <p class="actionsMenu">
        <input type="button" value="Create" class="createButton" id="createPersonButton"/>
        <input type="button" value="Delete selected" class="deleteButton" id="deletePersonButton"/>
    </p>

  </caption>
<thead>
  <tr id="headings">
    <th scope="col" class="checkCol"><input type="checkbox" id="selectAll" /></th>
    <th scope="col">Name</th>
    <th scope="col">Ballance,$</th>
    <th scope="col">Deals</th>
  </tr>
</thead>
<tbody>
  @foreach (var man in Model)
  {
    @Html.Partial("ViewPerson", man)
  }
</tbody>
</table>