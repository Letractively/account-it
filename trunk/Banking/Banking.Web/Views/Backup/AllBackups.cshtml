@using Banking.Backup

@model IEnumerable<SnapshotInfo>

@{
    ViewBag.Title = "Backups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="tableView" id="backups">

  <caption>
    <p>Deals</p>
    <div class="actionsMenu">
        <button data-action="create" data-entity="backup" id="createBackupButton"><img src="../../Content/images/add.png" /> Create</button>
        <button data-action="delete" data-entity="backup" id="deleteBackupButton" disabled><img src="../../Content/images/delete.png"> Delete selected</button>
    </div>
  </caption>
  <thead>
    <tr id="headings">
        <th scope="col" class="checkCol">
            <input type="checkbox" id="selectAll" data-action="selectAll" data-entity="backup" data-view="view"/>
        </th>
        <th scope="col" data-action="sort" class="sortable" data-sort-key="time">Time</th>
        <th scope="col" data-action="sort" class="sortable" data-sort-key="mark">Mark</th>
        <th scope="col" data-action="sort" class="sortable" data-sort-key="operations">Operations</th>
        <th scope="col" data-action="sort" class="sortable" data-sort-key="persons">Persons</th>
    </tr>
  </thead>
  <tbody data-list="backup" data-sort-key="time" data-sort-order="descending" data-view="view">
  @foreach (var backup in Model)
  {
    @Html.Partial("ViewBackup", backup)
  }
  </tbody>
</table>
